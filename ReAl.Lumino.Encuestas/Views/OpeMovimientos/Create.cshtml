@model ReAl.Lumino.Encuestas.Models.OpeMovimientos

@section Styles
{
	<!-- Sweetalert CSS -->
	<link href="~/lib/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
}	

@{
    ViewData["Title"] = "Create";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">OpeMovimientos</h1>
	</div>
</div><!--/.row-->

<div class="row">
<div class="col-lg-12">
<div class="panel panel-default">
<div class="panel-heading">Create</div>
<div class="panel-body">                             
    <div class="col-md-6">
        <form asp-action="Create" role="form" method="post" id="CreateForm">
            <div class="form-group">
                <a title="Volver al listado" class="btn btn-primary" asp-action="Index" ><i class="fa fa-arrow-left"></i></a>
                <a title="Guardar" class="btn btn-primary" onclick="Validate(this, event);"><i class="fa fa-save"></i></a>
            </div>                                                                                                           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idsus"></label>
                <select asp-for="Idsus" class="form-control selectpicker" asp-items="ViewBag.Idsus"
                        data-live-search="true" data-select-on-tab="true" data-size="5"
                        data-none-selected-text="No existen elementos"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idoup"></label>
                <select asp-for="Idoup" class="form-control selectpicker" asp-items="ViewBag.Idoup"
                        data-live-search="true" data-select-on-tab="true" data-size="5"
                        data-none-selected-text="No existen elementos"></select>
            </div>
            <input asp-for="Apiestado" class="form-control" type="hidden" value="ELABORADO" />	    
            <input asp-for="Apitransaccion" class="form-control" type="hidden" value="CREAR" />
            <input asp-for="Usucre" class="form-control" type="hidden" value="--" />            
        </form>
    </div>
</div>

</div>
</div>
</div><!-- /.row -->



@section Scripts
{
	<!-- Sweetalert JavaScript -->
	<script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
	
	<script>
		function Validate(ctl, event)
		{
			event.preventDefault();
			swal({
				title: "¿Seguro que desea guardar el registro?",
				text: "Verifique la información antes de aceptar!",
				type: "question",
				showCancelButton: true,
				confirmButtonColor: "#DD6B55",
				confirmButtonText: "Crear",
				cancelButtonText: "Cancelar"
			}).then(function(isConfirm) {
				if (isConfirm.value) {
					$("#CreateForm").submit();
				} else {
					swal("Cancelled", "Se ha cancelado la accion", "error");
				}
			});
		}
	</script>
}	

