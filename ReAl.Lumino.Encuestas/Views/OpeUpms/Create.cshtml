@model ReAl.Lumino.Encuestas.Models.OpeUpms

@section Styles
{
	<!-- Sweetalert CSS -->
	<link href="~/lib/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
}	

@{
    ViewData["Title"] = "Create";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">OpeUpms</h1>
	</div>
</div><!--/.row-->

<div class="row">
<div class="col-lg-12">
<div class="panel panel-default">
<div class="panel-heading">Create</div>
<div class="panel-body">                             

    <div class="col-md-6">
        <form asp-action="Create" role="form" method="post" id="CreateForm">
            <div class="form-group">
				<a title="Volver al listado" class="btn btn-primary" asp-action="Index" ><i class="fa fa-arrow-left"></i></a>
				<a title="Guardar" class="btn btn-primary" onclick="Validate(this, event);"><i class="fa fa-save"></i></a>
            </div>                                                                                                           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idopy" ></label>
				<select asp-for="Idopy" class="form-control selectpicker" asp-items="ViewBag.Idopy"
						data-live-search="true" data-select-on-tab="true" 
						data-none-selected-text="No existen elementos"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idcde" class="col-md-2 control-label"></label>
				<div class="col-md-10">
                    <select asp-for="Idcde" class="form-control selectpicker" asp-items="ViewBag.Idcde"
                            data-live-search="true" data-select-on-tab="true" 
                            data-none-selected-text="No existen elementos"></select>
				</div>
            </div>
            <div class="form-group">
                <label asp-for="Codigo" class="col-md-2 control-label"></label>
				<div class="col-md-10">
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
				</div>                
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="col-md-2 control-label"></label>
				<div class="col-md-10">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
				</div>                
            </div>
            <div class="form-group">
                <label asp-for="Fecinicio" class="col-md-2 control-label"></label>
				<div class="col-md-10">
                    <input asp-for="Fecinicio" class="form-control" />
                    <span asp-validation-for="Fecinicio" class="text-danger"></span>
				</div>                
            </div>
            <div class="form-group">
                <label asp-for="Latitud" class="col-md-2 control-label"></label>
				<div class="col-md-10">
                    <input asp-for="Latitud" class="form-control" />
                    <span asp-validation-for="Latitud" class="text-danger"></span>
				</div>                
            </div>
            <div class="form-group">
                <label asp-for="Longitud" class="col-md-2 control-label"></label>
				<div class="col-md-10">
                    <input asp-for="Longitud" class="form-control" />
                    <span asp-validation-for="Longitud" class="text-danger"></span>
				</div>                
            </div>
        </form>
    </div>
</div>

</div>
</div>
</div><!-- /.row -->



@section Scripts
{
	<!-- Sweetalert JavaScript -->
	<script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
	
	<script>
		function Validate(ctl, event)
		{
			event.preventDefault();
			swal({
				title: "¿Seguro que desea guardar el registro?",
				text: "Verifique la información antes de aceptar!",
				type: "question",
				showCancelButton: true,
				confirmButtonColor: "#DD6B55",
				confirmButtonText: "Crear",
				cancelButtonText: "Cancelar"
			}).then(function(isConfirm) {
				if (isConfirm.value) {
					$("#CreateForm").submit();
				} else {
					swal("Cancelled", "Se ha cancelado la accion", "error");
				}
			});
		}
	</script>
}	

