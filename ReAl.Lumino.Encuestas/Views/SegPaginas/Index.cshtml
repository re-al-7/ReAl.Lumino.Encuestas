@model IEnumerable<ReAl.Lumino.Encuestas.Models.SegPaginas>


@section Styles
{
	<!-- Bootstrap-Table CSS -->
	<link href="~/lib/bootstrap-table/dist/bootstrap-table.min.css" rel="stylesheet">
	<!-- Sweetalert CSS -->
	<link href="~/lib/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
}	

@{
    ViewData["Title"] = "Index";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">SegPaginas</h1>
	</div>
</div><!--/.row-->


<div class="row">
<div class="col-lg-12">
<div class="panel panel-default">
<div class="panel-heading">Index</div>
<div class="panel-body">
	<div class="col-md-6">
		<div class="form-group">
			<a asp-action="Create" title="Nuevo" class="btn btn-primary">
				<i class="fa fa-file-o"></i>
			</a>
		</div>
	</div>
	<div class="col-md-12">
		<table id="miTabla" data-toggle="table" data-show-columns="true" data-pagination="true"
			   data-search="true" data-show-toggle="true" 
			   data-locale="es-AR" data-advanced-search="true" data-id-table="advancedTable"
			   data-page-size="25" data-pagination-v-align="both" data-show-export="true">
			<thead>
				<tr>
					<th data-sortable="true" data-halign="center" data-field="IdsapNavigation" data-valign="middle">
						@Html.DisplayNameFor(model => model.IdsapNavigation)
					</th>
					<th data-sortable="true" data-halign="center" data-field="Nombremenu" data-valign="middle">
						@Html.DisplayNameFor(model => model.Nombremenu)
					</th>
					<th data-sortable="true" data-halign="center" data-field="Sigla" data-valign="middle">
						@Html.DisplayNameFor(model => model.Sigla)
					</th>
					<th data-sortable="true" data-halign="center" data-field="Nivel" data-valign="middle">
						@Html.DisplayNameFor(model => model.Nivel)
					</th>
					<th data-sortable="true" data-halign="center" data-field="Icono" data-valign="middle">
						@Html.DisplayNameFor(model => model.Icono)
					</th>
					<th data-sortable="true" data-halign="center" data-field="Metodo" data-valign="middle">
						@Html.DisplayNameFor(model => model.Metodo)
					</th>
					<th data-sortable="true" data-halign="center" data-field="Accion" data-valign="middle">
						@Html.DisplayNameFor(model => model.Accion)
					</th>
					<th data-sortable="true" data-halign="center" data-field="Descripcion" data-valign="middle">
						@Html.DisplayNameFor(model => model.Descripcion)
					</th>
					<th data-sortable="true" data-halign="center" data-field="Prioridad" data-valign="middle">
						@Html.DisplayNameFor(model => model.Prioridad)
					</th>					
					<th data-sortable="true" data-halign="center" data-field="Paginapadre" data-valign="middle">
						@Html.DisplayNameFor(model => model.Paginapadre)
					</th>
					<th data-searchable="false" data-halign="center" data-align="center" data-valign="middle">Acciones</th>
				</tr>
			</thead>
			<tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.IdsapNavigation.Sigla)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nombremenu)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Sigla)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nivel)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Icono)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Metodo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Accion)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Descripcion)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Prioridad)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Paginapadre)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Idspg" title="Editar" class="btn btn-primary"><i class="fa fa-edit"></i></a> 
						<a asp-action="Details" asp-route-id="@item.Idspg" title="Ver detalles" class="btn btn-warning"><i class="fa fa-indent"></i></a>
						<a asp-action="Delete" asp-route-id="@item.Idspg" title="Eliminar" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
						<button type="button" class="btn btn-default" data-container="body"
								data-toggle="popover" data-trigger="click" ToolTip="Auditoria del registro"
								data-placement="left" data-html="true" title="Auditoria"
								data-content='<b>Usuario Creacion:</b> @item.Usucre <br />
											  <b>Fecha Creacion:</b> @item.Feccre <br />
											  <b>Usuario Modificacion:</b> @item.Usumod <br />
											  <b>Fecha Modificacion:</b> @item.Fecmod <br />
											  <b>Estado:</b> @item.Apiestado '>
							<i class='fa fa-search-plus'></i>
						</button>
					</td>
				</tr>
		}
			</tbody>
		</table>
	</div>
</div>
</div>
</div>
</div><!-- /.row -->

@section Scripts
{
	<!-- Bootstrap-Table -->
	<script src="~/lib/bootstrap-table/dist/bootstrap-table.min.js"></script>
	<script src="~/lib/bootstrap-table/dist/extensions/toolbar/bootstrap-table-toolbar.min.js"></script>
	<script src="~/lib/bootstrap-table/dist/locale/bootstrap-table-es-AR.min.js"></script>
	<!-- Sweetalert JavaScript -->
	<script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
	<script>
		$(document).ready(function(){
			$('[data-toggle="popover"]').popover();
		});
	    
		$(document).on('show.bs.popover',
			function(e) {
					if ($(e.target).data('trigger') == 'click') {
						var timeoutDataName = 'shownBsTooltipTimeout';
						if ($(e.target).data(timeoutDataName) != null) {
							clearTimeout($(e.target).data(timeoutDataName));
						}
						var timeout = setTimeout(function() {
								$(e.target).click();
							},
							3000);
						$(e.target).data(timeoutDataName, timeout);
					}
				});
			$(document).on('hide.bs.popover',
				function(e) {
					if ($(e.target).data('trigger') == 'click') {
						var timeoutDataName = 'shownBsTooltipTimeout';
						if ($(e.target).data(timeoutDataName) != null) {
							clearTimeout($(e.target).data(timeoutDataName));
						}
					}
				});
	</script>
}	


